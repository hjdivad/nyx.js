{
  "name": "@malleatus/nyx",
  "version": "0.2.0",
  "repository": "https://github.com/malleatus/nyx.git",
  "license": "MIT",
  "author": "David J. Hamilton <dhamilton@linkedin.com>",
  "contributors": [
    "Robert Jackson <me@rwjblue.com>"
  ],
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "build": "npm-run-all build:clean build:ts build:ts:defs",
    "build:clean": "rimraf dist",
    "prepare": "npm-run-all build",
    "build:ts": "tsc",
    "build:ts:defs": "tsc --declaration --emitDeclarationOnly",
    "build:watch": "tsc --watch",
    "lint": "eslint --cache . --ext js,ts",
    "test": "npm-run-all lint build test:jest",
    "test:jest": "jest",
    "test:jest:debug": "NODE_OPTIONS='--inspect-brk' jest --testTimeout=0 --runInBand"
  },
  "dependencies": {
    "@octokit/rest": "^17.2.0",
    "@types/yargs": "^15.0.4",
    "hard-rejection": "^2.1.0",
    "moment": "^2.24.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@pollyjs/adapter-node-http": "^4.0.4",
    "@pollyjs/core": "^4.0.4",
    "@pollyjs/persister-fs": "^4.0.4",
    "@sinonjs/fake-timers": "^6.0.1",
    "@tracerbench/har": "^3.0.15",
    "@types/jest": "^25.2.1",
    "@types/pollyjs__adapter-node-http": "^2.0.0",
    "@types/pollyjs__core": "^4.0.0",
    "@types/pollyjs__persister-fs": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "release-it": "^13.5.2",
    "release-it-lerna-changelog": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "typescript": "~3.8.3"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "package.json",
    "dist/*",
    "!dist/**/*.test.*"
  ],
  "engines": {
    "node": "10.* || >= 12.*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --ext js,ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "12.16.1",
    "yarn": "1.22.4"
  }
}
